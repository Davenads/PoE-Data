# ========================================
# Discord Bot Configuration
# ========================================

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application Client ID
DISCORD_CLIENT_ID=your_client_id_here

# Discord Guild ID (for development/testing)
# Optional: Leave empty for global commands
DISCORD_GUILD_ID=your_test_guild_id_here

# ========================================
# Redis Configuration
# ========================================

# Redis host (localhost, WSL, or remote)
REDIS_HOST=localhost

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis password (leave empty if no auth)
REDIS_PASSWORD=

# Redis database number (0-15)
REDIS_DB=0

# ========================================
# Bot Configuration
# ========================================

# Default PoE2 league
DEFAULT_LEAGUE=Dawn

# Data update interval (in minutes)
UPDATE_INTERVAL_MINUTES=5

# Enable autocomplete for commands
ENABLE_AUTOCOMPLETE=true

# ========================================
# Logging Configuration
# ========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log to file (true/false)
LOG_TO_FILE=true

# Log directory
LOG_DIR=./logs

# ========================================
# Cache Configuration
# ========================================

# Chart cache duration (seconds)
CHART_CACHE_DURATION=600

# Currency data cache TTL (seconds)
CURRENCY_CACHE_TTL=300

# ========================================
# poe.ninja API Configuration
# ========================================

# Rate limit: requests per window
RATE_LIMIT_REQUESTS=12

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW=300000

# API timeout (milliseconds)
API_TIMEOUT=10000

# ========================================
# Feature Flags (Optional)
# ========================================

# Enable browser scraping fallback
ENABLE_BROWSER_SCRAPING=true

# Enable scheduled data updates
ENABLE_SCHEDULED_UPDATES=true

# Enable price alerts (future feature)
ENABLE_ALERTS=false
